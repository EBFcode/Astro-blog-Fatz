---
const navLinks = [
    {
        href: "/",
        text: "Home",
    },
    {
        href: "/about/",
        text: "About",
    },
    {
        href: "/blog/",
        text: "Blog",
    },
];

const pageTitle = 'Blog Bro'
---

<header class="flex justify-between p-10 ">

    <div class="bg-white border-2 border-black px-4 py-2">
        <h1>{pageTitle}</h1>
    </div>

    <nav class="">
        <ul class="flex gap-5 ">
            
            {navLinks.map((links) => 
                <li>
                    <a class="py-2  px-5 text-white bg-black hover:bg-green-950" href={links.href}>{links.text}</a>
                </li>
            )}
            
        </ul>
        
    </nav>
</header>