---
import {navLinks} from './navLinks.js'

const pageTitle = "My Astro Learning Blog";

---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body>
        <header class="flex justify-between p-10 ">
			<div class="bg-white border-2 border-black px-4 py-2">
				<h1>{pageTitle}</h1>
			</div>

            <nav class="">
                <ul class="flex gap-5 ">
                    
                    {navLinks.map((links) => 
                        <li>
                            <a class="py-2  px-5 text-white bg-black hover:bg-green-950" href={links.href}>{links.text}</a>
                        </li>
                    )}
                    
                </ul>
                
            </nav>
        </header>

		<main class="p-10">

		</main>
	</body>
</html>
